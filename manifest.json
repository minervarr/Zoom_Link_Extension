{
  "manifest_version": 2,
  "name": "UTEC Conference Link Extractor",
  "version": "1.1.0",
  "description": "Extract conference links from UTEC platform with improved tab detection",

  "permissions": [
    "activeTab",
    "https://conference.utec.edu.pe/*",
    "https://*.utec.edu.pe/*",
    "https://*.zoom.us/*",
    "storage",
    "notifications",
    "tabs",
    "webNavigation"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["https://*.utec.edu.pe/*"],
      "js": ["content-simple.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "UTEC Conference Extractor"
  },

  "commands": {
    "extract-links": {
      "suggested_key": {
        "default": "Ctrl+Alt+Shift+L"
      },
      "description": "Extract conference links from current page"
    }
  },

  "web_accessible_resources": [
    "debug-panel.html",
    "debug-panel.css",
    "debug-panel.js"
  ]
}
